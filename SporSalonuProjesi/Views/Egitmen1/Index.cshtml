@model IEnumerable<SporSalonuProjesi.Models.Egitmen>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fas fa-user-tie text-primary me-2"></i> Eğitmen Kadrosu
        </h3>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Eğitmen Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4">Eğitmen Profili</th>
                            <th class="py-3">Uzmanlık</th>
                            <th class="py-3">Hakkında</th>
                            <th class="py-3">Sosyal Medya</th>
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.FotoUrl" class="rounded-circle me-2 border" style="width: 40px; height: 40px; object-fit:cover;" onerror="this.src='https://via.placeholder.com/40'" />
                                        <span class="fw-bold">@item.AdSoyad</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary px-2 py-1">@item.Uzmanlik</span>
                                </td>
                                <td>
                                    <div style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @item.Aciklama
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Instagram))
                                    {
                                        <a href="@item.Instagram" target="_blank" class="text-danger"><i class="fab fa-instagram fa-lg"></i></a>
                                    }
                                    else
                                    {

                                        <span class="text-muted small">-</span>
                                    }
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>