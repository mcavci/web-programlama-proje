@model IEnumerable<SporSalonuProjesi.Models.Egitmen>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fas fa-user-tie text-primary me-2"></i> Eğitmen Kadrosu
        </h3>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Eğitmen Ekle
        </a>
    </div>

 
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="py-3 ps-4">Eğitmen Profili</th>
                                <th class="py-3">Uzmanlık Alanı</th>
                                <th class="py-3">Hakkında</th>
                                <th class="py-3">İletişim</th>
                                <th class="py-3 text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@item.FotoUrl"
                                                 class="rounded-circle me-3 border shadow-sm"
                                                 style="width: 45px; height: 45px; object-fit: cover;"
                                                 onerror="this.src='https://via.placeholder.com/150?text=No+Img'"
                                                 alt="@item.AdSoyad" />
                                            <div>
                                                <div class="fw-bold text-dark">@item.AdSoyad</div>
                                                <div class="small text-muted">ID: @item.Id</div>
                                            </div>
                                        </div>
                                    </td>

                                  
                                    <td>
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                            <i class="fas fa-dumbbell me-1"></i> @item.Uzmanlik
                                        </span>
                                    </td>

                                    
                                    <td>
                                        <div class="text-muted small" style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Aciklama">
                                            @item.Aciklama
                                        </div>
                                    </td>

                                    
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Instagram))
                                        {
                                            <a href="@item.Instagram" target="_blank" class="btn btn-sm btn-light text-danger border rounded-circle" title="Instagram">
                                                <i class="fab fa-instagram fa-lg"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small ms-2">-</span>
                                        }
                                    </td>

                                   
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
               
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-users-slash fa-3x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted">Henüz kayıtlı eğitmen bulunmuyor.</h5>
                    <p class="text-muted small">Yeni bir eğitmen ekleyerek başlayabilirsiniz.</p>
                </div>
            }
        </div>
    </div>
</div>