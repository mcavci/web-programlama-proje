@model SporSalonuProjesi.Models.Egitmen

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container mt-4">
    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning text-dark">
            <h3 class="card-title mb-0">
                <i class="fas fa-user-edit me-2"></i> Eğitmen Bilgilerini Güncelle
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label fw-bold">Ad Soyad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                <input asp-for="AdSoyad" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                            </div>
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Uzmanlik" class="form-label fw-bold">Uzmanlık Alanı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-dumbbell"></i></span>
                                <input asp-for="Uzmanlik" class="form-control" placeholder="Örn: Fitness, Pilates" />
                            </div>
                            <span asp-validation-for="Uzmanlik" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Instagram" class="form-label fw-bold">Instagram Linki</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fab fa-instagram"></i></span>
                                <input asp-for="Instagram" class="form-control" placeholder="https://instagram.com/..." />
                            </div>
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FotoUrl" class="form-label fw-bold">Profil Fotoğrafı (URL)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-image"></i></span>
                                <input asp-for="FotoUrl" class="form-control" placeholder="Resim linkini yapıştırın" />
                            </div>
                            <span asp-validation-for="FotoUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Aciklama" class="form-label fw-bold">Hakkında / Biyografi</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Eğitmen hakkında kısa bilgi..."></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <hr />

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                    </a>

                    <button type="submit" class="btn btn-warning fw-bold px-4 shadow-sm">
                        <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}