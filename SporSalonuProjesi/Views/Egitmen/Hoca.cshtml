@model List<SporSalonuProjesi.Models.Egitmen>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<link rel="stylesheet" href="~/css/Hoca.css" />
<div class="text-center py-5 text-white rounded-3 mb-5 shadow-lg position-relative bg-animated">

    <div class="position-relative z-1">
        <div class="mb-3 text-info">
            <i class="fas fa-users fa-3x"></i>
        </div>

        <h1 class="fw-bold display-5 text-uppercase">
            Profesyonel <span class="text-info">Eğitmen</span> Kadrosu
        </h1>

        <div class="d-inline-block bg-info rounded-pill my-3" style="width: 100px; height: 4px;"></div>

        <p class="lead text-light col-md-8 mx-auto fst-italic opacity-75">
            "Sınırlarını zorlamak için şampiyonlarla çalış."
        </p>
    </div>
</div>

<div class="container mb-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

        @{
            int sayac = 0;
        }
         @foreach (var hoca in Model)
        {
            sayac++;
           
            string gecikmeSuresi = (sayac * 0.15).ToString("0.00", System.Globalization.CultureInfo.InvariantCulture) + "s";

            <div class="col animasyonlu-kart" style="animation-delay: @gecikmeSuresi;">
                <div class="card h-100 bg-white shadow-sm hoca-card overflow-hidden rounded-3">

                    <div class="position-relative img-container">
                        <img src="@hoca.FotoUrl"
                             class="card-img-top hoca-foto"
                             alt="@hoca.AdSoyad"
                             style="object-fit: cover !important; object-position: top center !important; height: 250px !important;">

                        <div class="social-overlay position-absolute bottom-0 start-0 w-100 p-3 text-center d-flex justify-content-center align-items-center h-100">
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-outline-light rounded-circle"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="btn btn-outline-light rounded-circle"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>

                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-primary shadow-sm">@hoca.Uzmanlik</span>
                        </div>
                    </div>

                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark mb-1">@hoca.AdSoyad</h5>
                        <hr class="w-25 mx-auto text-primary opacity-100 my-2">
                        <p class="card-text text-muted small mb-4 flex-grow-1">@hoca.Aciklama</p>

                        <a href="/Randevu/Al?hocaAdi=@hoca.AdSoyad" class="btn btn-outline-primary w-100 rounded-pill fw-bold">
                            Randevu Al <i class="fas fa-chevron-right ms-1 small"></i>
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>