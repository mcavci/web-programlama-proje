@model IEnumerable<SporSalonuProjesi.Models.Admin>

@{
    ViewData["Title"] = "Yönetici Listesi";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">
                <i class="fas fa-user-shield text-primary me-2"></i> Yönetici (Admin) Listesi
            </h2>
            <p class="text-muted mb-0">Sisteme giriş yetkisi olan yöneticiler</p>
        </div>

        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Admin Ekle
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-4">E-Posta Adresi</th>
                        <th class="py-3">Şifre</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-2 me-3 border">
                                        <i class="fas fa-envelope text-primary"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.Email</span>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-key text-warning me-2"></i>
                                    <span class="font-monospace text-muted">@item.Sifre</span>
                                </div>
                            </td>

                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Detay">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center p-5">
                    <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Henüz kayıtlı yönetici bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>