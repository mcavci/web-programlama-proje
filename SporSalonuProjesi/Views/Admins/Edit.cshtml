@model SporSalonuProjesi.Models.Admin

@{
    ViewData["Title"] = "Admin Düzenle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-warning">

                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i> Admin Bilgilerini Güncelle
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope text-warning me-2"></i> E-Posta Adresi
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="admin@ornek.com" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Sifre" class="form-label fw-bold">
                                <i class="fas fa-key text-warning me-2"></i> Şifre
                            </label>
                            <input asp-for="Sifre" type="text" class="form-control" placeholder="Yeni şifreyi giriniz" required />
                            <span asp-validation-for="Sifre" class="text-danger small"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg shadow-sm fw-bold">
                                <i class="fas fa-check-circle me-2"></i> Değişiklikleri Kaydet
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i> Vazgeç ve Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}