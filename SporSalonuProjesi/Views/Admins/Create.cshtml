@model SporSalonuProjesi.Models.Admin

@{
    ViewData["Title"] = "Yeni Admin Ekle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">

                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-user-shield"></i> Yeni Yönetici (Admin) Oluştur</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope"></i> E-Posta Adresi
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="admin@spor.com" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Sifre" class="form-label fw-bold">
                                <i class="fas fa-key"></i> Şifre
                            </label>
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="******" required />
                            <span asp-validation-for="Sifre" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="fas fa-save me-2"></i> Admini Kaydet
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}