@model SporSalonuProjesi.Models.Admin

@{
    ViewData["Title"] = "Admin Detayları";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-primary">

                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i> Yönetici (Admin) Detayları
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="row mb-4 justify-content-center">

                        <div class="col-md-6 border-end text-center">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Hesap Bilgisi</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">E-Posta Adresi</label>
                                <div class="fs-5 text-dark">
                                    <i class="fas fa-envelope text-primary me-2"></i> @Html.DisplayFor(model => model.Email)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 text-center">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Güvenlik</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Şifre</label>
                                <div class="fs-5 text-dark">
                                    <i class="fas fa-key text-primary me-2"></i> @Html.DisplayFor(model => model.Sifre)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3 mb-3">
                        <span class="badge bg-light text-dark border">
                            Admin ID: #@Model.Id
                        </span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning shadow-sm fw-bold">
                            <i class="fas fa-edit me-2"></i> Bilgileri Düzenle
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>