@{
    ViewData["Title"] = "İletişim";
}

<link rel="stylesheet" href="~/css/İletişim.css" />
<section class="contact-header text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">BİZE ULAŞIN</h1>
        <p class="lead opacity-75">Sorularınız, önerileriniz veya sadece merhaba demek için buradayız.</p>
    </div>
</section>

<div class="container mb-5">

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="info-box">
                <i class="fas fa-map-marker-alt"></i>
                <h4 class="fw-bold text-dark">Adresimiz</h4>
                <p class="text-muted">Beşiktaş Cad. No:1903<br>İstanbul, Türkiye</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-box">
                <i class="fas fa-phone-alt"></i>
                <h4 class="fw-bold text-dark">Telefon</h4>
                <p class="text-muted">+90 212 123 45 67<br><span class="small text-primary">Hafta içi: 09:00 - 20:00</span></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-box">
                <i class="fas fa-envelope"></i>
                <h4 class="fw-bold text-dark">E-Posta</h4>
                <p class="text-muted">info@gym.com<br>destek@gym.com</p>
            </div>
        </div>
    </div>

    <div class="row g-5 align-items-stretch">

        <div class="col-lg-6">
            <div class="contact-form-wrapper h-100">
                <h3 class="mb-4 fw-bold text-primary"><i class="fas fa-paper-plane me-2"></i>Mesaj Gönder</h3>

                @if (ViewBag.Mesaj != null)
                {
                    <div class="alert alert-@ViewBag.Durum alert-dismissible fade show">
                        @ViewBag.Mesaj
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Gonder" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small fw-bold">AD SOYAD</label>
                            <input type="text" name="ad" class="form-control" placeholder="Adınız Soyadınız" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small fw-bold">E-POSTA</label>
                            <input type="email" name="email" class="form-control" placeholder="ornek@email.com" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">KONU</label>
                        <input type="text" name="konu" class="form-control" placeholder="Mesajınızın konusu" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label text-muted small fw-bold">MESAJINIZ</label>
                        <textarea name="mesaj" class="form-control" rows="5" placeholder="Size nasıl yardımcı olabiliriz?" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-gonder w-100 py-3 fw-bold shadow-sm">
                        GÖNDER <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="map-container h-100">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3008.9739462887645!2d28.99723231541566!3d41.04746397929688!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7650656bd63%3A0x8ca058b28c20b6c3!2sBe%C5%9Fikta%C5%9F%2C%20Istanbul!5e0!3m2!1sen!2str!4v1625687452145!5m2!1sen!2str"
                        allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>

<section class="faq-section mt-5 py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h5 class="text-primary fw-bold text-uppercase ls-2">Destek</h5>
            <h2 class="fw-bold">Sıkça Sorulan Sorular</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion" id="faqAccordion">

                    <div class="accordion-item shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                <span class="me-3 text-primary fw-bold">01.</span> Üyelik dondurma hakkım var mı?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-secondary">
                                Evet, 6 aylık ve 12 aylık üyeliklerde yılda 1 kez olmak üzere, en fazla 30 gün süreyle üyeliğinizi ücretsiz dondurabilirsiniz.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                <span class="me-3 text-primary fw-bold">02.</span> Otopark ücretli mi?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-secondary">
                                Hayır, spor salonumuzun üyelerine özel 50 araçlık kapalı otoparkımız antrenman süresince tamamen ücretsizdir.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item shadow-sm">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                <span class="me-3 text-primary fw-bold">03.</span> Kişisel havlu ve kilit getirmeli miyim?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body text-secondary">
                                Dolaplarımız şifreli kilit sistemine sahiptir, kilit getirmenize gerek yoktur. Hijyen kuralları gereği antrenman havlunuzu yanınızda getirmenizi rica ederiz.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}