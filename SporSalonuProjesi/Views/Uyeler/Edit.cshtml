@model SporSalonuProjesi.Models.Uye

@{
    ViewData["Title"] = "Üye Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-warning">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-edit me-2"></i> Üye Bilgilerini Güncelle
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="UyeId" />

                        <div class="row">
                            <div class="col-md-6 border-end-md">
                                <h5 class="text-warning text-dark border-bottom pb-2 mb-3">Kimlik Bilgileri</h5>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Ad" class="form-label fw-bold">Ad</label>
                                        <input asp-for="Ad" class="form-control" />
                                        <span asp-validation-for="Ad" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Soyad" class="form-label fw-bold">Soyad</label>
                                        <input asp-for="Soyad" class="form-control" />
                                        <span asp-validation-for="Soyad" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">E-Posta Adresi</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-envelope text-warning"></i></span>
                                        <input asp-for="Email" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Telefon" class="form-label fw-bold">Telefon</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-phone text-warning"></i></span>
                                        <input asp-for="Telefon" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Telefon" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DogumTarihi" class="form-label fw-bold">Doğum Tarihi</label>
                                    <input asp-for="DogumTarihi" type="date" class="form-control" />
                                    <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4">
                                <h5 class="text-warning text-dark border-bottom pb-2 mb-3">Fiziksel & Sistem Verileri</h5>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Boy" class="form-label fw-bold">Boy (cm)</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-ruler-vertical"></i></span>
                                            <input asp-for="Boy" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Boy" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Kilo" class="form-label fw-bold">Kilo (kg)</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light"><i class="fas fa-weight"></i></span>
                                            <input asp-for="Kilo" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Kilo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EgitmenId" class="form-label fw-bold">Atanan Eğitmen</label>
                                    <select asp-for="EgitmenId" class="form-select" asp-items="ViewBag.EgitmenId">
                                        <option value="">-- Eğitmen Seç --</option>
                                    </select>
                                    <span asp-validation-for="EgitmenId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="KayitTarihi" class="form-label fw-bold">Kayıt Tarihi</label>
                                    <input asp-for="KayitTarihi" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="KayitTarihi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Sifre" class="form-label fw-bold">Şifre</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-key text-warning"></i></span>
                                        <input asp-for="Sifre" type="text" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Sifre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                <i class="fas fa-arrow-left me-2"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-warning fw-bold px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}