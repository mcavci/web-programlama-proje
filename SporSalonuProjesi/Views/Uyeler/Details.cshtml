@model SporSalonuProjesi.Models.Uye

@{
    ViewData["Title"] = "Üye Profili";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-info">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-id-card me-2"></i> Üye Profil Detayı
                    </h3>
                </div>
                <div class="card-body p-4">

                    <div class="row">
                        <div class="col-md-6 border-end">
                            <h5 class="text-info text-dark border-bottom pb-2 mb-3">Kimlik Bilgileri</h5>

                            <div class="mb-4">
                                <label class="fw-bold text-muted small">Ad Soyad</label>
                                <div class="fs-4 text-dark fw-bold">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3 text-info">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <span>@Html.DisplayFor(model => model.Ad) @Html.DisplayFor(model => model.Soyad)</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">E-Posta</label>
                                <div class="text-dark d-flex align-items-center">
                                    <i class="fas fa-envelope text-info me-2"></i>
                                    <a href="mailto:@Model.Email" class="text-decoration-none text-dark">@Html.DisplayFor(model => model.Email)</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Telefon</label>
                                <div class="text-dark">
                                    <i class="fas fa-phone text-info me-2"></i> @Html.DisplayFor(model => model.Telefon)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Doğum Tarihi</label>
                                <div class="text-dark">
                                    <i class="fas fa-birthday-cake text-info me-2"></i> @Html.DisplayFor(model => model.DogumTarihi)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 ps-md-4">
                            <h5 class="text-info text-dark border-bottom pb-2 mb-3">Fiziksel & Sistem Verileri</h5>

                            <div class="row mb-4">
                                <div class="col-6">
                                    <div class="border rounded p-2 text-center bg-light">
                                        <label class="fw-bold text-muted small d-block">Boy</label>
                                        <span class="fs-5 fw-bold text-dark">
                                            <i class="fas fa-ruler-vertical text-secondary me-1"></i> @Html.DisplayFor(model => model.Boy) <small>cm</small>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2 text-center bg-light">
                                        <label class="fw-bold text-muted small d-block">Kilo</label>
                                        <span class="fs-5 fw-bold text-dark">
                                            <i class="fas fa-weight text-secondary me-1"></i> @Html.DisplayFor(model => model.Kilo) <small>kg</small>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Atanan Eğitmen</label>
                                <div class="text-dark">
                                    <i class="fas fa-user-tie text-info me-2"></i> @Html.DisplayFor(model => model.Egitmen.AdSoyad)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Sisteme Kayıt Tarihi</label>
                                <div class="text-dark">
                                    <i class="far fa-calendar-alt text-info me-2"></i> @Html.DisplayFor(model => model.KayitTarihi)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Hesap Şifresi</label>
                                <div>
                                    <span class="badge bg-secondary font-monospace p-2">
                                        <i class="fas fa-key me-1"></i> @Html.DisplayFor(model => model.Sifre)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model?.UyeId" class="btn btn-warning fw-bold px-5 shadow-sm">
                            <i class="fas fa-user-edit me-2"></i> Profili Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>