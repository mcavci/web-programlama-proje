@model SporSalonuProjesi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-4">
    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning text-dark">
            <h3 class="card-title mb-0">
                <i class="fa fa-edit"></i> Randevu Bilgilerini Güncelle
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="RandevuId" class="form-label fw-bold"></label>
                            <input asp-for="RandevuId" class="form-control bg-light" readonly />
                            <span asp-validation-for="RandevuId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UyeId" class="form-label fw-bold"></label>
                            <input asp-for="UyeId" class="form-control" />
                            <span asp-validation-for="UyeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UyeAdSoyad" class="form-label fw-bold"></label>
                            <input asp-for="UyeAdSoyad" class="form-control" />
                            <span asp-validation-for="UyeAdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EgitmenAdi" class="form-label fw-bold"></label>
                            <input asp-for="EgitmenAdi" class="form-control" />
                            <span asp-validation-for="EgitmenAdi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Durum" class="form-label fw-bold"></label>
                            <input asp-for="Durum" class="form-control" placeholder="Örn: Aktif/Pasif" />
                            <span asp-validation-for="Durum" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tarih" class="form-label fw-bold"></label>
                            <input asp-for="Tarih" type="date" class="form-control" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Saat" class="form-label fw-bold"></label>
                            <input asp-for="Saat" type="time" class="form-control" />
                            <span asp-validation-for="Saat" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Listeye Dön
                    </a>
                    <button type="submit" class="btn btn-warning px-4 fw-bold">
                        <i class="fa fa-save"></i> Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}