@model IEnumerable<SporSalonuProjesi.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fas fa-calendar-check text-primary me-2"></i> Randevu Takvimi
        </h3>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Randevu Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4">Üye Bilgisi</th>
                            <th class="py-3">Eğitmen</th>
                            <th class="py-3">Tarih & Saat</th>
                            <th class="py-3">Durum</th>
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <h6 class="mb-0 fw-bold">@item.UyeAdSoyad</h6>
                                    <small class="text-muted">ID: #@item.UyeId</small>
                                </td>
                                <td>
                                    <i class="fas fa-user-tie text-secondary me-1"></i> @item.EgitmenAdi
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold">@item.Tarih.ToString("dd.MM.yyyy")</span>
                                        <span class="text-muted small">@item.Saat</span>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        string statusClass = "bg-secondary";
                                        if (item.Durum == "Onaylandı") { statusClass = "bg-success"; }
                                        else if (item.Durum == "Onay Bekliyor") { statusClass = "bg-warning text-dark"; }
                                        else if (item.Durum == "İptal") { statusClass = "bg-danger"; }
                                    }
                                    <span class="badge @statusClass rounded-pill px-3 py-2">
                                        @item.Durum
                                    </span>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>