@model SporSalonuProjesi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detayları";
}

<div class="container mt-4">
    <div class="card shadow-sm border-warning">

        <div class="card-header bg-warning text-dark">
            <h3 class="card-title mb-0">
                <i class="fa fa-info-circle"></i> Randevu Detayları
            </h3>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="fw-bold text-muted small">RANDEVU NO</label>
                        <p class="h5">#@Model.Id</p>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold text-muted small">ÜYE BİLGİSİ</label>
                        <p class="h5">@Model.UyeAdSoyad</p>
                        <span class="text-muted small">(ID: @Model.UyeId)</span>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold text-muted small">EĞİTMEN</label>
                        <p class="h5">@Model.EgitmenAdi</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="fw-bold text-muted small">DURUM</label>
                        <p class="h5">
                            @if (Model.Durum == "Onay Bekliyor")
                            {
                                <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                            }
                            else if (Model.Durum == "Aktif" || Model.Durum == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Durum</span>
                            }
                        </p>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold text-muted small">TARİH & SAAT</label>
                        <p class="h5">
                            <i class="fa fa-calendar-alt me-2 text-warning"></i> @Model.Tarih.ToShortDateString()
                            <span class="mx-2">|</span>
                            <i class="fa fa-clock me-2 text-warning"></i> @Model.Saat
                        </p>
                    </div>
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Listeye Dön
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 fw-bold">
                    <i class="fa fa-pencil-alt"></i> Bu Randevuyu Düzenle
                </a>
            </div>

        </div>
    </div>
</div>