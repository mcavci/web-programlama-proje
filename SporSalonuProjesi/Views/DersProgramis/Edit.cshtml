@model SporSalonuProjesi.Models.DersProgrami

@{
    ViewData["Title"] = "Ders Düzenle";
    ViewData["FooterGizle"] = true;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i> Ders Programını Güncelle
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="DersAdi" class="form-label fw-bold"><i class="fas fa-dumbbell text-warning me-1"></i> Ders Adı</label>
                                <input asp-for="DersAdi" class="form-control" placeholder="Ders adını giriniz" />
                                <span asp-validation-for="DersAdi" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Gun" class="form-label fw-bold"><i class="fas fa-calendar-day text-warning me-1"></i> Gün</label>
                                <select asp-for="Gun" class="form-select">
                                    <option value="">-- Gün Seç --</option>
                                    <option value="Pazartesi">Pazartesi</option>
                                    <option value="Salı">Salı</option>
                                    <option value="Çarşamba">Çarşamba</option>
                                    <option value="Perşembe">Perşembe</option>
                                    <option value="Cuma">Cuma</option>
                                    <option value="Cumartesi">Cumartesi</option>
                                    <option value="Pazar">Pazar</option>
                                </select>
                                <span asp-validation-for="Gun" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="BaslangicSaati" class="form-label fw-bold"><i class="far fa-clock text-warning me-1"></i> Başlangıç</label>
                                <input asp-for="BaslangicSaati" type="time" class="form-control" />
                                <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BitisSaati" class="form-label fw-bold"><i class="fas fa-history text-warning me-1"></i> Bitiş</label>
                                <input asp-for="BitisSaati" type="time" class="form-control" />
                                <span asp-validation-for="BitisSaati" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EgitmenId" class="form-label fw-bold"><i class="fas fa-user-tie text-warning me-1"></i> Eğitmen</label>
                            <select asp-for="EgitmenId" class="form-select" asp-items="ViewBag.EgitmenId">
                                <option value="">-- Eğitmen Değiştir --</option>
                            </select>
                            <span asp-validation-for="EgitmenId" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                <i class="fas fa-arrow-left me-2"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-warning fw-bold px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}