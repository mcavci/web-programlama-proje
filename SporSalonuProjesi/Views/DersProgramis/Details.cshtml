@model SporSalonuProjesi.Models.DersProgrami

@{
    ViewData["Title"] = "Ders Detayı";
    ViewData["FooterGizle"] = true;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i> Ders Programı Detayı
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="row mb-4">
                        <div class="col-md-6 border-end">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Ders Bilgisi</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Ders Adı</label>
                                <div class="fs-5 text-dark">
                                    <i class="fas fa-dumbbell text-primary me-2"></i> @Html.DisplayFor(model => model.DersAdi)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Eğitmen</label>
                                <div class="fs-5 text-dark">
                                    <i class="fas fa-user-tie text-primary me-2"></i> @Html.DisplayFor(model => model.Egitmen.AdSoyad)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Kayıt ID</label>
                                <div class="text-secondary">
                                    #@Html.DisplayFor(model => model.Id)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 ps-md-4">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Zaman Çizelgesi</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Gün</label>
                                <div class="fs-5">
                                    <span class="badge bg-info text-dark">
                                        <i class="fas fa-calendar-day me-1"></i> @Html.DisplayFor(model => model.Gun)
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Saat Aralığı</label>
                                <div class="fs-5 text-dark">
                                    <i class="far fa-clock text-primary me-2"></i>
                                    @Html.DisplayFor(model => model.BaslangicSaati) - @Html.DisplayFor(model => model.BitisSaati)
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-secondary shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning fw-bold shadow-sm px-4">
                            <i class="fas fa-edit me-2"></i> Düzenle
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>