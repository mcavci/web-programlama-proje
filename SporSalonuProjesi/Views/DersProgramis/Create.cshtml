@model SporSalonuProjesi.Models.DersProgrami

@{
    ViewData["Title"] = "Yeni Ders Ekle";
    ViewData["FooterGizle"] = true;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-plus"></i> Yeni Ders Programı Oluştur</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Gun" class="form-label fw-bold"><i class="fas fa-calendar-day"></i> Gün Seçiniz</label>
                            <select asp-for="Gun" class="form-select" required>
                                <option value="">-- Gün Seç --</option>
                                <option value="Pazartesi">Pazartesi</option>
                                <option value="Salı">Salı</option>
                                <option value="Çarşamba">Çarşamba</option>
                                <option value="Perşembe">Perşembe</option>
                                <option value="Cuma">Cuma</option>
                                <option value="Cumartesi">Cumartesi</option>
                                <option value="Pazar">Pazar</option>
                            </select>
                            <span asp-validation-for="Gun" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BaslangicSaati" class="form-label fw-bold"><i class="far fa-clock"></i> Başlangıç Saati</label>
                                <input asp-for="BaslangicSaati" type="time" class="form-control" required />
                                <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BitisSaati" class="form-label fw-bold"><i class="fas fa-history"></i> Bitiş Saati</label>
                                <input asp-for="BitisSaati" type="time" class="form-control" required />
                                <span asp-validation-for="BitisSaati" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="DersAdi" class="form-label fw-bold"><i class="fas fa-dumbbell"></i> Ders Adı</label>
                                <input asp-for="DersAdi" class="form-control" placeholder="Örn: Pilates, Zumba, Crossfit..." required />
                                <span asp-validation-for="DersAdi" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Kontenjan" class="form-label fw-bold"><i class="fas fa-users"></i> Kontenjan</label>
                                <input asp-for="Kontenjan" type="number" class="form-control" value="10" min="1" required />
                                <span asp-validation-for="Kontenjan" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EgitmenId" class="form-label fw-bold"><i class="fas fa-user-tie"></i> Eğitmen</label>
                            <select asp-for="EgitmenId" class="form-select" asp-items="ViewBag.EgitmenId">
                                <option value="">-- Hoca Seçiniz --</option>
                            </select>
                            <span asp-validation-for="EgitmenId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">Dersi Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal / Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}