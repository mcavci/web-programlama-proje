@{
    ViewData["Title"] = "Hakkımızda";
}

<link href="~/css/hakkında.css" rel="stylesheet" />

<div class="container-fluid bg-light py-5 mb-5 border-bottom border-danger border-5">
    <div class="container text-center">
        <h1 class="display-3 fw-bold text-dark mb-3">HAKKIMIZDA</h1>
        <p class="lead text-muted fs-4">"CANGYM: Sadece bir spor salonu değil, bir yaşam tarzı."</p>
        <div class="d-flex justify-content-center mt-4">
            <span class="bg-danger" style="width: 100px; height: 6px; border-radius: 3px;"></span>
        </div>
    </div>
</div>

<div class="container">

    <div class="row align-items-center mb-6 g-5">

        <div class="col-lg-6">
            <div id="cangymCarousel" class="carousel slide shadow-lg rounded-4" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#cangymCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#cangymCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#cangymCarousel" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#cangymCarousel" data-bs-slide-to="3"></button>
                </div>
                <div class="carousel-inner rounded-4">
                    <div class="carousel-item active" data-bs-interval="3000">
                        <img src="/img/hakkında4.jpg" class="d-block w-100" alt="CANGYM Dış">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="fw-bold text-uppercase text-shadow">İkonik Mimari</h3>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="/img/hakkında3.jpg" class="d-block w-100" alt="CANGYM İç">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="fw-bold text-uppercase text-shadow">Geniş Alanlar</h3>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="/img/hakkında2.jpg" class="d-block w-100" alt="CANGYM Detay">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="fw-bold text-uppercase text-shadow">Piremium</h3>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="/img/hakkındaekip.jpg" class="d-block w-100" alt="CANGYM Atmosfer">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="fw-bold text-uppercase text-shadow">Sıcak Atmosfer</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 ps-lg-5">
            <h2 class="fw-bold display-5 mb-4 text-dark">Sporun Yeni Adresi</h2>
            <p class="lead text-secondary mb-4" style="font-size: 1.2rem;">
                2010 yılında başladığımız bu yolculukta, bugün şehrin en donanımlı spor kompleksi olmanın gururunu yaşıyoruz.
                1500 metrekarelik devasa alanımızda, en yeni teknolojiye sahip ekipmanlarımızla hedeflerine ulaşman için mükemmel ortamı yarattık.
            </p>

            <div class="row g-4 mt-3">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger text-white rounded-circle p-2 me-3">
                            <i class="bi bi-clock-history fs-4"></i>
                        </div>
                        <span class="fw-bold fs-5">7/24 Açık Salon</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger text-white rounded-circle p-2 me-3">
                            <i class="bi bi-p-square fs-4"></i>
                        </div>
                        <span class="fw-bold fs-5">Ücretsiz Otopark</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger text-white rounded-circle p-2 me-3">
                            <i class="bi bi-droplet-half fs-4"></i>
                        </div>
                        <span class="fw-bold fs-5">Sauna & Buhar Odası</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger text-white rounded-circle p-2 me-3">
                            <i class="bi bi-wifi fs-4"></i>
                        </div>
                        <span class="fw-bold fs-5">Sınırsız Wi-Fi</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center bg-danger bg-gradient text-white rounded-5 p-5 mb-5 shadow-lg position-relative overflow-hidden mt-5">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-25"></div>

        <div class="col-md-3 mb-4 mb-md-0 position-relative z-1">
            <div class="stat-number">1500+</div>
            <p class="fs-5 text-uppercase fw-light ls-1">Mutlu Üye</p>
        </div>
        <div class="col-md-3 mb-4 mb-md-0 position-relative z-1">
            <div class="stat-number">1500m²</div>
            <p class="fs-5 text-uppercase fw-light ls-1">Spor Alanı</p>
        </div>
        <div class="col-md-3 mb-4 mb-md-0 position-relative z-1">
            <div class="stat-number">50+</div>
            <p class="fs-5 text-uppercase fw-light ls-1">Grup Dersi</p>
        </div>
        <div class="col-md-3 position-relative z-1">
            <div class="stat-number">10</div>
            <p class="fs-5 text-uppercase fw-light ls-1">Yıllık Tecrübe</p>
        </div>
    </div>

    <div class="mb-5 pb-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Bize Ulaşın</h2>
            <p class="text-muted fs-5">Detaylı bilgi ve üyelik için bekliyoruz.</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card border-0 shadow h-100 py-4 text-center hover-zoom rounded-4">
                    <div class="card-body">
                        <div class="bg-light text-danger rounded-circle d-inline-flex p-3 mb-3 shadow-sm">
                            <i class="bi bi-geo-alt-fill fs-3"></i>
                        </div>
                        <h4 class="fw-bold">Adres</h4>
                        <p class="text-muted">Beşiktaş 1903 sokak,<br>İstanbul, Türkiye</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow h-100 py-4 text-center hover-zoom rounded-4">
                    <div class="card-body">
                        <div class="bg-light text-danger rounded-circle d-inline-flex p-3 mb-3 shadow-sm">
                            <i class="bi bi-telephone-fill fs-3"></i>
                        </div>
                        <h4 class="fw-bold">Telefon</h4>
                        <p class="text-muted">
                            <a href="tel:+903221234567" class="text-decoration-none text-muted fw-bold fs-5">+90 212 123 45 67</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow h-100 py-4 text-center hover-zoom rounded-4">
                    <div class="card-body">
                        <div class="bg-light text-danger rounded-circle d-inline-flex p-3 mb-3 shadow-sm">
                            <i class="bi bi-envelope-fill fs-3"></i>
                        </div>
                        <h4 class="fw-bold">E-Posta</h4>
                        <p class="text-muted">
                            <a href="mailto:info@cangym.com" class="text-decoration-none text-muted fw-bold fs-5">info@gym.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>