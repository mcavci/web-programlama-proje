@model SporSalonuProjesi.Models.Paket

@{
    ViewData["Title"] = "Paket Detayı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i> Paket Özellikleri
                    </h3>
                </div>
                <div class="card-body p-4">

                    <div class="row">
                        <div class="col-md-6 border-end">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Paket Bilgisi</h5>

                            <div class="mb-4">
                                <label class="fw-bold text-muted small">Paket Adı</label>
                                <div class="fs-4 fw-bold text-dark">
                                    <i class="fas fa-tag text-primary me-2"></i> @Html.DisplayFor(model => model.PaketAdi)
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="fw-bold text-muted small">Fiyat</label>
                                <div class="display-6 fw-bold text-success">
                                    <i class="fas fa-lira-sign"></i> @Html.DisplayFor(model => model.Fiyat)
                                </div>
                                <small class="text-muted">KDV Dahildir</small>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Kullanım Süresi</label>
                                <div class="fs-5 text-dark">
                                    <i class="far fa-calendar-alt text-primary me-2"></i> @Html.DisplayFor(model => model.SureAy) Ay
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 ps-md-4">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Kullanım Hakları</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Haftalık Randevu Limiti</label>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary fs-6 px-3 py-2 rounded-pill">
                                        <i class="fas fa-calendar-check me-2"></i> @Html.DisplayFor(model => model.HaftalikRandevuLimiti) Kez
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Yapay Zeka (AI) Analiz Hakkı</label>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info text-dark fs-6 px-3 py-2 rounded-pill">
                                        <i class="fas fa-robot me-2"></i> @Html.DisplayFor(model => model.ToplamAiHakki) Adet
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-muted small">Erişim Tipi</label>
                                <div class="mt-1">
                                    @if (Model.SinirsizMi)
                                    {
                                        <div class="alert alert-success d-inline-block py-2 px-3 mb-0">
                                            <i class="fas fa-infinity me-2"></i> <strong>Sınırsız Erişim</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary d-inline-block py-2 px-3 mb-0">
                                            <i class="fas fa-stopwatch me-2"></i> <strong>Sınırlı / Standart</strong>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model?.PaketId" class="btn btn-warning fw-bold px-5 shadow-sm">
                            <i class="fas fa-edit me-2"></i> Paketi Düzenle
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>