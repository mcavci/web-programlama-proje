@model SporSalonuProjesi.Models.Paket

@{
    ViewData["Title"] = "Yeni Paket Oluştur";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-box-open me-2"></i> Yeni Üyelik Paketi Oluştur
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-success border-bottom pb-2 mb-3">Paket Detayları</h5>

                                <div class="mb-3">
                                    <label asp-for="PaketAdi" class="form-label fw-bold">Paket Adı</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-tag text-success"></i></span>
                                        <input asp-for="PaketAdi" class="form-control" placeholder="Örn: Gold Üyelik" />
                                    </div>
                                    <span asp-validation-for="PaketAdi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Fiyat" class="form-label fw-bold">Fiyat (₺)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-lira-sign text-success"></i></span>
                                        <input asp-for="Fiyat" type="number" class="form-control" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SureAy" class="form-label fw-bold">Süre (Ay)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="far fa-calendar-alt text-success"></i></span>
                                        <input asp-for="SureAy" type="number" class="form-control" placeholder="Örn: 12" />
                                    </div>
                                    <span asp-validation-for="SureAy" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4 border-start-md">
                                <h5 class="text-success border-bottom pb-2 mb-3">Kullanım Hakları</h5>

                                <div class="mb-3">
                                    <label asp-for="HaftalikRandevuLimiti" class="form-label fw-bold">Haftalık Randevu Limiti</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-calendar-check text-success"></i></span>
                                        <input asp-for="HaftalikRandevuLimiti" type="number" class="form-control" placeholder="Örn: 3" />
                                    </div>
                                    <span asp-validation-for="HaftalikRandevuLimiti" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ToplamAiHakki" class="form-label fw-bold">AI Analiz Hakkı</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-robot text-success"></i></span>
                                        <input asp-for="ToplamAiHakki" type="number" class="form-control" placeholder="Örn: 5" />
                                    </div>
                                    <small class="text-muted">Üyenin kullanabileceği yapay zeka analiz sayısı.</small>
                                    <span asp-validation-for="ToplamAiHakki" class="text-danger"></span>
                                </div>

                                <div class="mb-3 mt-4 p-3 border rounded bg-light d-flex justify-content-between align-items-center">
                                    <label class="form-check-label fw-bold mb-0" for="sinirsizSwitch">
                                        <i class="fas fa-infinity text-primary me-2"></i> Sınırsız Erişim
                                    </label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="sinirsizSwitch" asp-for="SinirsizMi" style="width: 3em; height: 1.5em;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary px-4 me-md-2">
                                <i class="fas fa-times me-2"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i> Paketi Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}