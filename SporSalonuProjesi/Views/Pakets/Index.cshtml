@model IEnumerable<SporSalonuProjesi.Models.Paket>

@{
    ViewData["Title"] = "Paketler";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <div>
            <h3 class="fw-bold text-dark mb-0">
                <i class="fas fa-cubes text-success me-2"></i> Üyelik Paketleri
            </h3>
            <p class="text-muted small mb-0">Spor salonu üyelik seçeneklerini buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Paket Oluştur
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect rounded-4">

                        <div class="card-header bg-dark text-white text-center py-3 rounded-top-4">
                            <h4 class="card-title mb-0 fw-bold">@item.PaketAdi</h4>
                            @if (item.SinirsizMi)
                            {
                                <span class="badge bg-warning text-dark mt-2 rounded-pill px-3">
                                    <i class="fas fa-infinity me-1"></i> Sınırsız Erişim
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary mt-2 rounded-pill px-3">
                                    <i class="fas fa-stopwatch me-1"></i> Standart Paket
                                </span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">

                            <div class="text-center my-3">
                                <h2 class="display-5 fw-bold text-success">₺@item.Fiyat</h2>
                                <span class="text-muted">/ @item.SureAy Ay</span>
                            </div>

                            <hr />

                            <ul class="list-unstyled mb-4 flex-grow-1">
                                <li class="mb-3 d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3 text-success">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Haftalık Randevu</small>
                                        <span class="fw-bold text-dark">@item.HaftalikRandevuLimiti Kez</span>
                                    </div>
                                </li>

                                <li class="mb-3 d-flex align-items-center">
                                    <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3 text-info">
                                        <i class="fas fa-robot"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">AI Analiz Hakkı</small>
                                        <span class="fw-bold text-dark">@item.ToplamAiHakki Adet</span>
                                    </div>
                                </li>

                                <li class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 text-primary">
                                        <i class="far fa-clock"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Kullanım Süresi</small>
                                        <span class="fw-bold text-dark">@item.SureAy Ay Boyunca</span>
                                    </div>
                                </li>
                            </ul>

                            <div class="d-grid gap-2">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.PaketId" class="btn btn-outline-warning fw-bold">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PaketId" class="btn btn-outline-primary fw-bold">
                                        <i class="fas fa-info-circle"></i> Detay
                                    </a>
                                </div>
                                <a asp-action="Delete" asp-route-id="@item.PaketId" class="btn btn-outline-danger fw-bold rounded-pill mt-2">
                                    <i class="fas fa-trash-alt me-2"></i> Paketi Sil
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-box-open fa-3x text-muted opacity-50"></i>
            </div>
            <h4 class="text-muted">Henüz hiç paket oluşturulmamış.</h4>
            <a asp-action="Create" class="btn btn-link text-decoration-none">İlk paketi eklemek için tıklayın.</a>
        </div>
    }

</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>